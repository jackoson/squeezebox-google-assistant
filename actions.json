{
    "manifest": {
        "displayName": "Tygarwen Interface",
        "invocationName": "Tygarwen Interface",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.example.actions.OnOffAppliance",
            "availability": { "deviceClasses": [ { "assistantSdkDevice": {} } ] },
            "intent": {
                "name": "com.example.intents.OnOffAppliance",
                "parameters": [
                    {
                        "name": "state",
                        "type": "OnOff"
                    },
                    {
                        "name": "appliance",
                        "type": "Appliance"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "(turn)? (the)? $Appliance:appliance (light)? (lights)? $OnOff:state",
                        "turn $OnOff:state (the)? $Appliance:appliance (light)? (lights)?",
                        "$Appliance:appliance (light)? (lights)? (turn)? $OnOff:state"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "turning $appliance $state"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.OnOffAppliance",
                                    "params": {
                                        "appliance": "$appliance",
                                        "state": "$state"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.SqueezeBoxCommand",
            "availability": { "deviceClasses": [ { "assistantSdkDevice": {} } ] },
            "intent": {
                "name": "com.example.intents.SqueezeBoxCommand",
                "parameters": [
                    {
                        "name": "command",
                        "type": "Command"
                    },
                    {
                        "name": "room",
                        "type": "Room"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "($Room:room)? squeezebox $Command:command",
                        "$Command:command (the)? ($Room:room)? squeezebox"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "$room squeezebox $command"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.SqueezeBoxCommand",
                                    "params": {
                                        "room": "$room",
                                        "command": "$command"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.SqueezeBoxSearch",
            "availability": { "deviceClasses": [ { "assistantSdkDevice": {} } ] },
            "intent": {
                "name": "com.example.intents.SqueezeBoxSearch",
                "parameters": [
                    {
                        "name": "room",
                        "type": "Room"
                    },
                    {
                        "name": "term",
                        "type": "SchemaOrg_Text"
                    },
                    {
                        "name": "type",
                        "type": "SearchType"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "($Room:room)? squeezebox search (for)? (the)? ($SearchType:type)? (matching)? $SchemaOrg_Text:term"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "playing $type matching $term"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.SqueezeBoxSearch",
                                    "params": {
                                        "room": "$room",
                                        "term": "$term",
                                        "type": "$type"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.SqueezeBoxVolume",
            "availability": { "deviceClasses": [ { "assistantSdkDevice": {} } ] },
            "intent": {
                "name": "com.example.intents.SqueezeBoxVolume",
                "parameters": [
                    {
                        "name": "room",
                        "type": "Room"
                    },
                    {
                        "name": "percent",
                        "type": "SchemaOrg_Number"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "(set)? (the)? ($Room:room)? squeezebox volume (to)? $SchemaOrg_Number:percent (%)?"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "changing volume to $percent percent"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.SqueezeBoxVolume",
                                    "params": {
                                        "room": "$room",
                                        "percent": "$percent"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.SqueezeBoxRadio4",
            "availability": { "deviceClasses": [ { "assistantSdkDevice": {} } ] },
            "intent": {
                "name": "com.example.intents.SqueezeBoxRadio4",
                "parameters": [
                    {
                        "name": "room",
                        "type": "Room"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "(play)? (BBC)? (radio)? 4 on (the)? ($Room:room)? squeezebox",
                        "($Room:room)? squeezebox (play)? (BBC)? (radio)? 4"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "playing BBC radio 4 on $room squeezebox"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.SqueezeBoxRadio4",
                                    "params": {
                                        "room": "$room"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
